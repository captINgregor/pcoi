var n,i,j:longint;
    a:array[1..20,1..20] of longint;
begin
    readln(n);
    a[1,1] :=1;
    for i:=2 to n do a[1,i]:=a[1, i-1] +1;
    for i:=2 to n do a[i, n]:=a[i-1,n] + 1;
    for i:=n-1 downto 1 do a[n ,i]:=a[n ,i+1]+1;
    for i:=n-1 downto 2 do a[i, 1]:=a[i+1, 1]+1;
    for i :=1 to n do
    begin
        for j:=1 to n  do
        begin
	        if a[i,j]=0 then write('    ')
            else write(a[i,j]:4);
        end;
        writeln;
    end;    
end.